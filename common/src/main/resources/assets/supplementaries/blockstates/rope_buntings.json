{
    "multipart": [
        {   "when":  { "knot": true},
            "apply": { "model": "supplementaries:block/rope_knot" }
        },
        {   "when": { "north": "rope" },
            "apply": { "model": "supplementaries:block/rope_connection"}
        },
        {   "when": { "east": "rope" },
            "apply": { "model": "supplementaries:block/rope_connection", "y": 90}
        },
        {   "when": { "south": "rope" },
            "apply": { "model": "supplementaries:block/rope_connection", "y": 180}
        },
        {   "when": { "west": "rope" },
            "apply": { "model": "supplementaries:block/rope_connection", "y": 270}
        },
        {   "when": { "north": "bunting" },
            "apply": { "model": "supplementaries:block/rope_connection"}
        },
        {   "when": { "east": "bunting" },
            "apply": { "model": "supplementaries:block/rope_connection", "y": 90}
        },
        {   "when": { "south": "bunting" },
            "apply": { "model": "supplementaries:block/rope_connection", "y": 180}
        },
        {   "when": { "west": "bunting" },
            "apply": { "model": "supplementaries:block/rope_connection", "y": 270}
        },
        {   "when": { "up": true },
            "apply": { "model": "supplementaries:block/rope_up"}
        },
        {   "when": { "down": true },
            "apply": { "model": "supplementaries:block/rope_down"}
        }
    ]
}